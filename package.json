{
  "name": "nestify",
  "version": "1.0.0",
  "main": "index.js",
  "author": "joraavanes <jora_a@outlook.com>",
  "license": "MIT",
  "engines": {
    "node": "14.15.1"
  },
  "scripts": {
    "start": "node api/dist/app.js",
    "dev": "cross-env NODE_ENV=development nodemon api/src/app.ts",
    "tsbuild": "tsc -p .",
    "copy-env": "cp api/src/config/.env api/dist/config/.env",
    "build": "concurrently \"yarn run tsbuild\" \"yarn run copy-env\"",
    "test": "cross-env NODE_ENV=test jest --watch --testTimeout=8000"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "dependencies": {
    "apollo-server-express": "^3.1.2",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "graphql": "^15.5.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.0.1",
    "mongoose": "^5.13.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.12",
    "@types/mongodb": "^4.0.7",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^15.12.4",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "concurrently": "^6.2.1",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^27.2.0",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.6",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  }
}
